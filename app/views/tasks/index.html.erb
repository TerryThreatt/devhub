<% content_for :header do %>
  <h1><%= current_user.email %> </h1>
  <h3>Teams:</h3>
<% end %>

<% content_for :content do %>
  <% if @teams.count == 0 %>
    <p><%= link_to "Create Team", new_team_path(current_user) %></p>
  <% else %>
    <% @teams.each do |team| %>
      <div class="card border-info mb-3">
        <div class="card-body">
          Team:<h5 class="card-title"><%= link_to team.name, team_path(team) %></h5>
          Description:<p class="card-text"><%= team.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>