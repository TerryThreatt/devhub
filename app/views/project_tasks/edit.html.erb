<% content_for :header do %>
  <h1>Edit Project Task</h1>
<% end %>

<% content_for :content do %>
    <% if @project_task.errors.any? %>
    <ul>
        <% @project_task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
    </ul>
  <% end %>

  <%= form_for @project_task do |f| %>
    <div class='form-group'>
          <strong><%= f.label :name %></strong>
          <%= f.text_field :name, class:"form-control" %><br>
          <strong><%= f.label :description %></strong>
          <%= f.text_area :description, class:"form-control" %><br>
          <strong><%= f.label :due_date %></strong>
          <%= f.date_field :due_date, class:"form-control" %><br>
    </div >
        <div class='form-group'>
          <%= f.fields_for :task do |t| %>
              <strong><%= t.label "Task Name:" %></strong>
            <%= t.text_field :name, class:"form-control" %><br>
            <strong><%= t.label "Task Description:" %></strong>
            <%= t.text_area :description, class:"form-control" %><br>
        </div>

    <%= f.submit class: "btn btn-primary", method: :update %>
<%end %>
    <% end %>
  <% end %>
