<% content_for :header do %>
<h1><%= @project.name %></h1>
<p><%= @project.description %></p>
<strong><%= @project.due_date %></strong>
<ul>
<% @project.project_tasks.each do |pt| %>
    <li><%= pt.name %></li>
    <li><%= pt.description %></li>
    <li><%= pt.name %></li>
    Done: <%= checkbox_tag pt.done? %>
    <% end %>
</ul>
<% end %>

<% content_for :content do %>
    <%= link_to 'Add Task', new_project_project_task_path(@project) %>
    <%= link_to 'Edit Project', edit_project_path(@project) %>
    <%= link_to 'Create New Project', new_project_path(@project) %>
    <%= link_to 'Delete Project', project_path(@project), method: :delete %>
    <%= link_to 'Back', projects_path %>
<% end %>
